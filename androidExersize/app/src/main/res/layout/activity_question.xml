<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="@drawable/question"
            android:gravity="center"
            android:text="Q.No#1 : What does PHP stand for?"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp"
        android:layout_marginTop="200sp"
        >

        <TextView
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHP: Hypertext Preprocessor"
            android:layout_margin="15sp"
            android:textColor="@android:color/black"
            android:padding="10sp"
            android:background="@drawable/roundedbox"
            />

        <TextView
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Persnol Hypertext processor"
            android:layout_margin="15sp"
            android:textColor="@android:color/black"
            android:padding="10sp"
            android:background="@drawable/roundedbox"
            />

        <TextView
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private Home Page"
            android:layout_margin="15sp"
            android:textColor="@android:color/black"
            android:padding="10sp"
            android:background="@drawable/roundedbox"/>

        <TextView
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private Home Page"
            android:layout_margin="15sp"
            android:textColor="@android:color/black"
            android:padding="10sp"
            android:background="@drawable/roundedbox"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="580sp"

        >

        <Button
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:background="@drawable/btnroundcorner"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:background="@drawable/btnroundcorner"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>